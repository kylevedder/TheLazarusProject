#!/usr/bin/env python3
import subprocess
import sys

def execution_args():
    return {
        'fix': "~/bin/.g4/fix",
        'lint': "~/bin/.g4/lint"
    }

def check_args():
    valid_keys = [k for k in execution_args().keys()]
    if len(sys.argv) < 2:
        print("Missing execution argument!\nValid arguments: {}".format(valid_keys))
        exit(-1)
    if execution_args().get(sys.argv[1], None) is None:
        print("Invalid execution argument {}!\nValid arguments: {}".format(sys.argv[1], valid_keys))
        exit(-1)

def main():
    check_args()
    subprocess.call(execution_args()[sys.argv[1]], shell=True)


if __name__ == "__main__":
    main()
